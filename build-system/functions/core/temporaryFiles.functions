global_uses core.trap

temporaryFiles_filesToRemoveOnExit=()
temporaryFiles_removeAll()
{
	rm -rf -- "${temporaryFiles_filesToRemoveOnExit[@]}"
}

temporaryFiles_newFileToRemoveOnExit()
{
	TMP_FILE="$(mktemp -t "$ourName".XXXXXXXXXXXX)"
	temporaryFiles_filesToRemoveOnExit+=("$TMP_FILE")
}

temporaryFiles_newFolderToRemoveOnExit()
{
	TMP_FOLDER="$(mktemp -t "$ourName".XXXXXXXXXXXX -d)"
	temporaryFiles_filesToRemoveOnExit+=("$TMP_FOLDER")
}

trap_addOnCleanUp temporaryFiles_removeAll
